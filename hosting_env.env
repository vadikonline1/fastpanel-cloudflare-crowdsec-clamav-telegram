# =============================================================================
# HOSTING AUTOMATION CONFIGURATION
# =============================================================================

# === PATHS & DIRECTORIES ===
BOUNCER_DIR="/etc/automation-web-hosting"
LOG_DIR="$BOUNCER_DIR/log"
SERVICE_DIR="/etc/systemd/system"
CROWDSEC_DIR="/etc/crowdsec"
ACQUIS_FILE="/etc/crowdsec/acquis.yaml"
CLOUDFLARE_BOUNCER_CONFIG="/etc/crowdsec/bouncers/crowdsec-cloudflare-worker-bouncer.yaml"

# === SCRIPTS ===
NOTIFY_SCRIPT="$BOUNCER_DIR/telegram_notify.sh"
INOTIFY_SCRIPT="$BOUNCER_DIR/file-monitor.sh"
CLAMAV_MONITOR_SCRIPT="$BOUNCER_DIR/clamav-onchange.sh"
DAILY_SCAN_SCRIPT="$BOUNCER_DIR/clamav-daily.sh"

# === CLOUDFLARE CONFIGURATION ===
CF_API_TOKEN="your_cloudflare_api_token_here"
CF_ACCOUNT_ID="your_cloudflare_account_id_here"

# === FASTPANEL CONFIGURATION ===
FASTPANEL_PASSWORD="secure_password_here"

# === TELEGRAM CONFIGURATION ===
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"
TELEGRAM_CHAT_ID="your_chat_id_here"
TELEGRAM_THREAD_ID="optional_thread_id"

# === CROWDSEC CONFIGURATION ===
DASHBOARD_API_KEY="your_crowdsec_dashboard_key_here"
CROWDSEC_LAPI_KEY="your_crowdsec_lapi_key_here"
BOUNCER_NAME="cloudflare-worker-bouncer"

# === FILE MONITORING CONFIGURATION ===
MONITOR_PATHS="/var/www /etc/nginx /etc/apache2"
EXCLUDE_PATHS="*.log *.tmp *.cache *.swp *.swx"

# === CLAMAV CONFIGURATION ===
CLAMAV_MONITOR_PATHS="/var/www/uploads /tmp /var/www/tmp"
CLAMAV_MAX_FILE_SIZE="25M"
CLAMAV_QUARANTINE_DIR="/var/quarantine"
MONITOR_DIRS=("/var/www" "/var/tmp" "/var/backups" "/var/upload" "/tmp")
WEEKLY_SCAN_DIRS=("/var" "/home" "/tmp" "/root" "/etc" "/opt")
MALDET_SCAN_DIRS=("/var" "/home" "/tmp" "/root")


# === SECURITY SETTINGS ===
ENABLE_AUTO_UPDATES="true"
ENABLE_FILE_MONITORING="true"
ENABLE_MALWARE_SCANNING="true"
ENABLE_CLAMAV_MONITORING="true"
ENABLE_DAILY_SCANS="true"

# === SCHEDULE CONFIGURATION ===
DAILY_SCAN_TIME="00:00"
